<% if !(User.find_by_name(@username)) %>
    <%= render '/components/no_user_found' %>
<% else %>

        <div class = "row" >
            <div class = "col-xs-6 col-xs-offset-3">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <p class = "title-text"> <%=@username%> is following </p>
                    </div>
                 </div>
                <div id='following-box' class="panel panel-default">
                </div>
                <script>render_following("<%=@username%>");</script>
            </div>
            <div class = "col-xs-3">
                <div class="panel panel-default">
                     <div class="panel-body">
                        <%= render '/components/meme_box' %>
                    </div>
               </div>
               <div class="panel panel-default">
                    <div class="panel-body">
                       <%= render '/components/peeps_box' %>
                    </div>
                </div>
            </div>
        </div>
        
<% end %>