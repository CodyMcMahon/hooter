<% if @hoot %>
    <% @p = @hoot %>
    <div class = "col-xs-6 col-xs-offset-3">
        <div id='timeline'></div>
        <script>
        render_single_hoot("<%= params[:id] %>");
        </script>
        <div id="subhoot-timeline-<%= params[:id] %>"></div>
        <script>
        render_subhoot_timeline("<%= params[:id] %>");
        </script>
        <% if user_signed_in? %>
            <%= render '/components/subhoot_form' %>
        <% end %>
    </div>
<% else %>
    <p> no hoot found </p>
<% end %>