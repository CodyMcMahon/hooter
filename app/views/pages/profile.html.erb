<% if !(User.find_by_username(params[:id])) %>
    <%= render '/components/no_user_found' %>
<% else %>


    <div class = "row" >
        <div class = "col-xs-12">
            <div class="jumbotron">
                <h1>give ya boi <%= @username %> a hoot hoot!</h1>
            </div>
        </div>
    </div>  

    <div class = "row" >
        <div class = "col-xs-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    <%= render '/components/profile_box' %>
                </div>
            </div>
            <% if user_signed_in? %>
                <% if @this_user.id != current_user.id %>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <%= render '/components/follow_button' %>
                        </div>
                    </div>
                <% end %>
            <% end %>
        </div>
        <div class = "col-xs-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <p> <%= @username %>'s hoots </p>
                </div>
             </div>
            <%= render '/components/time_line' %>
       </div>
        <div class = "col-xs-3">
            <div class="panel panel-default">
                <div class="panel-body">
                   <%= render '/components/peeps_box' %>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <%= render '/components/meme_box' %>
                 </div>
            </div>
        </div>
    </div>
<% end %>
