<% if !(User.find_by_username(params[:id])) %>
    <p> NO USER FOUND :((( </p>
<% else %>


    <div class = "row" >
        <div class = "col-xs-12">
            <div class="jumbotron">
                <h1>give ya boi <%= @username %> a hoot hoot!</h1>
            </div>
        </div>
    </div>  

    <div class = "row" >
        <div class = "col-xs-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    <%= render '/components/profile_box' %>
                </div>
            </div>
            <% if @this_user.id != current_user.id %>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <%= render '/components/follow_button' %>
                    </div>
                </div>
            <% end %>
        </div>
        <div class = "col-xs-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <p> <%= @username %>'s hoots </p>
                </div>
             </div>
            <%= render '/components/time_line' %>
       </div>
        <div class = "col-xs-3">
            <div class="panel panel-default">
                <div class="panel-body">
                   <%= render '/components/peeps_box' %>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <%= render '/components/meme_box' %>
                 </div>
            </div>
        </div>
    </div>
<% end %>
